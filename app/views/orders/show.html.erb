<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>[Order ID] : <%= @order.id%>   [Buyer] : <%= @order.buyer_name%></h4></div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-4"><b>Name</b></div>
            <div class="col-md-3"><b>Price</b></div>
            <div class="col-md-3"><b>Cost</b></div>
            <div class="col-md-2"><b>Amnt.</b></div>
          </div>
          <%= render partial: 'order_products', collection: @order.order_products, as: :item %>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-6">
              <div class="row">
                <div class="col-md-6">
                  <b>Full price: </b> <%= @order.full_price %>
                </div>
                <div class="col-md-6">
                  <b>Discount: </b> <%= @order.discount %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <b>Shipping cost: </b> <%= @order.shipping_cost %>
                </div>
                <div class="col-md-6">
                  <b>Packaging cost: </b> <%= @order.packaging_cost %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <h4>Total price: <small><%= @order.total_price %></small></h4>
                </div>
                <div class="col-md-6">
                  <h4>Total cost: <small><%= @order.total_cost %></small></h4>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <h3>Revenue: <%= cal_rev(@order)%></h3>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <h4> Description </h4>
              <p><%= @order.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
