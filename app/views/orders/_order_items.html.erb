<% if item.amount > 0%>
  <div class="row">
    <div class="col-md-3"><%= item.product.name %></div>
    <div class="col-md-3"><%= "#{item.product.price} B" %></div>
    <div class="col-md-3"><%= "#{item.product.cost} B" %></div>
    <div class="col-md-1"><%= item.amount %></div>
    <div class="col-md-1">
      <%= link_to 'X', remove_from_order_product_path(item.product.id), method: 'get', class: 'btn btn-danger btn-xs', style: 'font-size: 8px;'%>
    </div>
  </div>
<% end %>
