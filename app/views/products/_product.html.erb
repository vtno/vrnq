<tr>
  <td>
    <%= p.name%>
  </td>
  <td>
    <%= p.price%>
  </td>
  <td>
    <%= p.cost%>
  </td>
  <%if p.stock < 3%>
    <td class='warning'>
  <%elsif p.stock == 0%>
    <td class='danger'>
  <%else%>
    <td>
  <%end%>
    <%= p.stock%>
  </td>
  <td>
    <%= p.description%>
  </td>
  <td class='text-center'>
    <%= link_to 'Add to order', add_to_order_product_path(p.id) , class: 'btn btn-success'%>
    <%= link_to 'Edit', edit_product_path(p.id), class: 'btn btn-warning'%>
    <%= link_to 'Delete', product_path(p.id), method: 'delete', class: 'btn btn-danger'%>
  </td>
</tr>
