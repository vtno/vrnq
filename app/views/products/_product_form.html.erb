<div class="container">
  <div class="row">
    <h2 class='text-center'>New Product</h2>
    <div class="col-md-4 col-md-offset-4">
      <%= form_for @product do |f|  %>
        <div class="form-group">
          <%= f.label 'Product Name' %>
          <%= f.text_field :name, class: 'form-control', autocomplete: 'off' %>
        </div>
        <div class="form-group">
          <%= f.label 'Price' %>
          <%= f.number_field :price, class: 'form-control', autocomplete: 'off', min: 0 %>
        </div>
        <div class="form-group">
          <%= f.label 'Stock' %>
          <%= f.number_field :stock, class: 'form-control', autocomplete: 'off', min: 0 %>
        </div>
        <div class="form-group">
          <%= f.label 'Cost' %>
          <%= f.number_field :cost, class: 'form-control', autocomplete: 'off', min: 0 %>
        </div>
        <div class="form-group">
          <%= f.label 'Note' %>
          <%= f.text_field :description, class: 'form-control', autocomplete: 'off' %>
        </div>
        <div class="text-center">
          <%= f.submit 'สร้าง Product', class: 'btn btn-default btn-primary'  %>
          <%= link_to 'Back', products_path, class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
